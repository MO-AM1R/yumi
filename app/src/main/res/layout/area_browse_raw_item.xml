<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/area_raw"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/card"
        app:cardCornerRadius="8dp"
        android:elevation="2dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="12dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingHorizontal="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/arrow_back_shape"
                >

                <TextView
                    android:id="@+id/area_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="IT"
                    android:gravity="center_vertical"
                    style="@style/TextAppearance.Yumi.HeadlineSmall"
                    android:textAllCaps="true"
                    android:maxLength="2"
                    android:maxLines="1"
                    />
            </FrameLayout>

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/area_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                style="@style/TextAppearance.Yumi.TitleLarge"
                app:layout_constraintStart_toEndOf="@+id/area_logo"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Italian" />

            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ios_arrow_right"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>