<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="@dimen/dialog_padding">

    <!-- Icon Container -->
    <FrameLayout
        android:id="@+id/iconContainer"
        android:layout_width="@dimen/dialog_icon_size"
        android:layout_height="@dimen/dialog_icon_size"
        android:background="@drawable/dialog_confirmation_icon_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="@dimen/dialog_icon_inner_size"
            android:layout_height="@dimen/dialog_icon_inner_size"
            android:layout_gravity="center"
            android:contentDescription="Confirmation"
            android:src="@drawable/ic_warning_triangle" />
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/dialog_title_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconContainer"
        tools:text="Are you sure?" />

    <!-- Message -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/dialog_message_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:text="This action cannot be undone." />

    <!-- Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMessage">

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNegative"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_cancel"
            android:fontFamily="sans-serif-medium"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:textColor="@color/dialog_button_cancel_text"
            android:textSize="@dimen/dialog_button_text_size"
            app:backgroundTint="@null"
            app:cornerRadius="@dimen/dialog_button_corner"
            app:rippleColor="@color/ripple"
            tools:text="Cancel" />

        <!-- Confirm Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPositive"
            android:layout_width="0dp"
            android:layout_height="@dimen/dialog_button_height"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_primary"
            android:fontFamily="sans-serif-medium"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:textColor="@color/accent_foreground"
            android:textSize="@dimen/dialog_button_text_size"
            app:backgroundTint="@null"
            app:cornerRadius="@dimen/dialog_button_corner"
            app:rippleColor="@color/ripple"
            tools:text="Confirm" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>