<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingHorizontal="24dp"
    android:paddingVertical="50dp"
    tools:context=".presentation.home.view.fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hello_message"
                style="@style/TextAppearance.Yumi.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_food_lover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/TextAppearance.Yumi.BodySmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_would_you_like_to_cook_today"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hello_message" />

            <com.example.yumi.presentation.custom.CircleAvatarView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cav_backgroundColor="@color/primary"
                app:cav_foregroundColor="@color/primary_foreground"
                app:cav_radius="32dp"
                app:cav_text="JD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/meal_day"
                style="@style/TextAppearance.Yumi.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/meal_of_the_day"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/avatar" />

            <androidx.cardview.widget.CardView
                android:id="@+id/meal_day_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/card"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/meal_day">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/meal_day_image"
                            android:layout_width="match_parent"
                            android:layout_height="260dp"
                            android:contentDescription="@string/meal_description"
                            android:scaleType="centerCrop"
                            android:src="@drawable/temp_image" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="18dp">

                            <TextView
                                android:id="@+id/meal_category"
                                style="@style/TextAppearance.Yumi.LabelSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/shape_meal_category"
                                android:textAllCaps="true"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                tools:text="seafood" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <eightbitlab.com.blurview.BlurView
                                android:id="@+id/fav_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/glass_background"
                                android:padding="8dp"
                                app:blurOverlayColor="@color/glass_overlay_color">

                                <View
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/favorite"
                                    android:backgroundTint="@android:color/white" />

                            </eightbitlab.com.blurview.BlurView>

                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="18dp"
                        android:paddingVertical="14dp">

                        <TextView
                            style="@style/TextAppearance.Yumi.BodyMedium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            tools:text="Grilled Salmon with Asparagus" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ingredients_count"
                                style="@style/TextAppearance.Yumi.BodySmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="6 ingredients" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <include
                                android:id="@+id/add_to_plan_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                layout="@layout/add_to_plan_button" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/random_meals_text"
                style="@style/TextAppearance.Yumi.BodyLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/random_meals"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/meal_day_card" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/random_meals_text"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/random_meal_card"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/card"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/meal_day">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/random_meal_image"
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:contentDescription="@string/meal_description"
                                android:scaleType="centerCrop"
                                android:src="@drawable/temp_image" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="18dp">

                                <TextView
                                    android:id="@+id/random_meal_category"
                                    style="@style/TextAppearance.Yumi.LabelSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/shape_meal_category"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold"
                                    tools:text="seafood" />

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <eightbitlab.com.blurview.BlurView
                                    android:id="@+id/random_fav_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/glass_background"
                                    android:padding="8dp"
                                    app:blurOverlayColor="@color/glass_overlay_color">

                                    <View
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:background="@drawable/favorite"
                                        android:backgroundTint="@android:color/white" />

                                </eightbitlab.com.blurview.BlurView>

                            </LinearLayout>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingHorizontal="18dp"
                            android:paddingVertical="14dp">

                            <TextView
                                style="@style/TextAppearance.Yumi.BodyMedium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                tools:text="Grilled Salmon with Asparagus" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="16dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/random_ingredients_count"
                                    style="@style/TextAppearance.Yumi.BodySmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="6 ingredients" />

                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1" />

                                <include
                                    android:id="@+id/random_add_to_plan_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    layout="@layout/add_to_plan_button" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>