<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ingredient_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/ingredient_description"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ingredient_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/foreground"
        style="@style/TextAppearance.Yumi.LabelSmall"
        app:layout_constraintEnd_toEndOf="@+id/ingredient_image_view"
        app:layout_constraintStart_toStartOf="@+id/ingredient_image_view"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_image_view"
        tools:text="Vegetables" />

</androidx.constraintlayout.widget.ConstraintLayout>