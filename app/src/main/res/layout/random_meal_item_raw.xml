<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/random_meal_card"
    android:layout_height="wrap_content"
    android:layout_width="300dp"
    android:backgroundTint="@color/card"
    app:cardCornerRadius="18dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/meal_day"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/random_meal_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:contentDescription="@string/meal_description"
                android:scaleType="centerCrop"
                android:src="@drawable/temp_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp">

                <TextView
                    android:id="@+id/random_meal_category"
                    style="@style/TextAppearance.Yumi.LabelSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_meal_category"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    tools:text="seafood" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/random_fav_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/glass_background"
                    android:padding="8dp"
                    app:blurOverlayColor="@color/glass_overlay_color">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/favorite"
                        android:backgroundTint="@android:color/white" />

                </eightbitlab.com.blurview.BlurView>

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="18dp"
            android:paddingVertical="14dp">

            <TextView
                android:id="@+id/random_meal_name"
                style="@style/TextAppearance.Yumi.BodyMedium"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="Grilled Salmon with Asparagus" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/random_ingredients_count"
                    style="@style/TextAppearance.Yumi.BodySmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="6 ingredients" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <include
                    android:id="@+id/random_add_to_plan_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/add_to_plan_button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>